{
  "name": "Mic & Tab Transcription",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "tabs", "scripting", "tabCapture"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["*://*/"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}
